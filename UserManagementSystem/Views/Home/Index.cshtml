@using UserManagementSystem.ViewModels

@model List<UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<h2 class="mb-4 text-center">Users</h2>

<div class="mb-3 text-center">
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center">
        No users available. Click "Load Data" to fetch users.
    </div>

    <div class="mt-3 text-center">
        <a class="btn btn-primary px-4" asp-action="LoadData" style="background-color: #348feb; border-color: #348feb;">
            Load Data
        </a>
    </div>
}
else
{
    <form asp-action="SaveAll" method="post">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover align-middle text-center">
                <thead class="table-primary">
                    <tr>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Website</th>
                        <th>Address</th>
                        <th>Note</th>
                        <th>Active</th>
                        <th>Password</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        var user = Model[i];

                        <tr class="table-light">
                            <td class="text-center">
                                @user.Name
                                <input type="hidden" name="users[@i].Name" value="@user.Name" />
                            </td>

                            <td class="text-center">
                                @user.Username
                                <input type="hidden" name="users[@i].Username" value="@user.Username" />
                            </td>

                            <td class="text-center">
                                @user.Email
                                <input type="hidden" name="users[@i].Email" value="@user.Email" />
                            </td>

                            <td class="text-center">
                                @user.Phone
                                <input type="hidden" name="users[@i].Phone" value="@user.Phone" />
                            </td>

                            <td class="text-center">
                                @user.Website
                                <input type="hidden" name="users[@i].Website" value="@user.Website" />
                            </td>

                            <td class="text-center">
                                @user.Address.Street, @user.Address.Suite, @user.Address.City, @user.Address.Zipcode
                                <br />
                                Lat: @user.Address.Geo.Lat, Lng: @user.Address.Geo.Lng

                                <input type="hidden" name="users[@i].Address.Street" value="@user.Address.Street" />
                                <input type="hidden" name="users[@i].Address.Suite" value="@user.Address.Suite" />
                                <input type="hidden" name="users[@i].Address.City" value="@user.Address.City" />
                                <input type="hidden" name="users[@i].Address.Zipcode" value="@user.Address.Zipcode" />

                                <input type="hidden" name="users[@i].Address.Geo.Lat" value="@user.Address.Geo.Lat" />
                                <input type="hidden" name="users[@i].Address.Geo.Lng" value="@user.Address.Geo.Lng" />
                            </td>

                            <td>
                                <textarea class="form-control" name="users[@i].Note">@user.Note</textarea>
                            </td>

                            <td>
                                <div class="form-check d-flex justify-content-center">
                                    <input type="checkbox" class="form-check-input" name="users[@i].IsActive" value="true" @(user.IsActive ? "checked" : "") />
                                    <input type="hidden" name="users[@i].IsActive" value="false" />
                                </div>
                            </td>

                            <td>
                                <input required type="password" class="form-control" name="users[@i].Password" value="@user.Password" />
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

        <div class="mt-3 text-center">
            <button type="submit" class="btn btn-success px-4" style="background-color:#8BC34A; border-color:#8BC34A;">
                Save All
            </button>
            <a class="btn btn-primary px-4" asp-action="LoadData" style="background-color: #348feb; border-color: #348feb;">
                Load Data
            </a>
        </div>
    </form>
}

<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-success">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="successLabel">Success</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @TempData["Success"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-danger">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="errorLabel">Error</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @TempData["Error"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            @if (TempData["Success"] != null)
            {
                        <text>
                        new bootstrap.Modal(document.getElementById("successModal")).show();
                        </text>
            }

            @if (TempData["Error"] != null)
            {
                        <text>
                        new bootstrap.Modal(document.getElementById("errorModal")).show();
                        </text>
            }
        });
    </script>
}
